opam-version: "2.0"
name: "bantorra"
synopsis: "Extensible Library Management and Path Resolution"
description: """
This package is developed for managing libraries and resolving unit paths within them.
"""
maintainer: "favonia <favonia@gmail.com>"
authors: "favonia <favonia@gmail.com>"
license: "Apache 2.0"
homepage: "https://github.com/favonia/bantorra"
bug-reports: "https://github.com/favonia/bantorra/issues"
dev-repo: "git+https://github.com/favonia/bantorra.git"
depends: [
  "dune" {>= "2.5"}
  "ocaml" {>= "4.08.0"}
  "ocamlfind" {>= "1.8.1"}
  "yaml" {>= "2.1.0"}
]
build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "build" "-p" name "-j" jobs "@runtest"] {with-test}
  ["dune" "build" "-p" name "-j" jobs "@doc"] {with-doc}
]
